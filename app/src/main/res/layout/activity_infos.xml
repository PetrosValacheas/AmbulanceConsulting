<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Information"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30sp"
        tools:text="@string/INfo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <Button
            android:id="@+id/strokeButton"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Stroke"

            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/burnButton"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"

            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp"
            android:text="Burns"

            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>


        <Button
            android:id="@+id/traumaButton"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="112dp"
            android:layout_marginBottom="8dp"
            android:text="Major Trauma"

            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/boneButton"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="164dp"
            android:layout_marginBottom="8dp"
            android:text="Fractures/Dislocation"

            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/allergicButton"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_marginTop="216dp"
            android:layout_marginBottom="8dp"
            android:text="Anaphylaxis"
            android:layout_centerHorizontal="true"

            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/poisonButton"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_marginTop="268dp"
            android:layout_marginBottom="8dp"
            android:text="Poison"
            android:layout_centerHorizontal="true"

            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/heartAttackButton"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_marginTop="320dp"
            android:layout_marginBottom="8dp"
            android:text="Heart Attack"
            android:layout_centerHorizontal="true"

            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/heatStrokeButton"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_marginTop="372dp"
            android:layout_marginBottom="8dp"
            android:text="Heat Stroke/Exhaustion"
            android:layout_centerHorizontal="true"

            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>



    </RelativeLayout>
    </ScrollView>

</LinearLayout>